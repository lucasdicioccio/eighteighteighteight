name:                eighteighteighteight
version:             0.1.0.0
-- synopsis:
-- description:
homepage:            https://github.com/lucasdicioccio/eighteighteighteight#readme
license:             BSD3
license-file:        LICENSE
author:              Lucas DiCioccio
maintainer:          lucas@dicioccio.fr
copyright:           2017 Lucas DiCioccio
category:            Netowrk
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Network.EightEightEightEight
  build-depends:       base >= 4.7 && < 5
                     , aeson
                     , async
                     , data-default-class
                     , http2
                     , http2-client
                     , string-conversions
                     , text
                     , tls
  default-language:    Haskell2010

executable eighteighteighteight-exe
  hs-source-dirs:      app
  main-is:             Main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , eighteighteighteight
  default-language:    Haskell2010

test-suite eighteighteighteight-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , eighteighteighteight
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/githubuser/eighteighteighteight
